<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>aem</id>
    <formats>
        <format>zip</format>
    </formats>
    <baseDirectory>/</baseDirectory>
    <fileSets>
        <fileSet>
            <outputDirectory/>
            <includes>
                <include>**/*.xml</include>
            </includes>
            <filtered>true</filtered>
            <directory>src/main/cq-resources</directory>
        </fileSet>
        <fileSet>
            <outputDirectory/>
            <excludes>
                <exclude>**/*.xml</exclude>
            </excludes>
            <filtered>false</filtered>
            <directory>src/main/cq-resources</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>/jcr_root/apps/neba/install/</outputDirectory>
            <includes>
                <include>**/*.jar</include>
            </includes>
            <filtered>false</filtered>
            <directory>src/main/patched-dependencies</directory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <outputDirectory>/jcr_root/apps/neba/install/</outputDirectory>
            <scope>compile</scope>
        </dependencySet>
    </dependencySets>
</assembly>